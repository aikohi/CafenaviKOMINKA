<div class="shop-index">
  <div class="container">
    <div class= "row">
        <div class="col-xs-3 col-md-6 mb-4">
           <% @shops.each do |shop| %>
           <div class="card-deck">
            <div class="card" style="padding:10px 0px; height: 200px;">
            <%= attachment_image_tag shop, :shop_image ,class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= link_to shop_path(shop.id) do %><%= shop.shop_name %></h5>
                <p class="card-text"><%= shop.introduction %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>