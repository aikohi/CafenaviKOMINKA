<div class="shop-index">
<%= render 'shops/search' %>
  <div class="shops">
    <div class="container">
      <div class="row">
        <% if @shops.present? %>
            <% @shops.each do |shop| %>
              <div class="col-lg-4 md-4"style="margin-bottom:50px;">
                 <div class="card">
                   <%= attachment_image_tag shop, :shop_image, size:'100x250',class: "card-img-top",fallback: "/images/no_image.png"%>
                    <div class="card-body">
                     <p class="card-address"><i class="fas fa-map-marker-alt"></i><%= shop.address %></p>
                      <p class="card-title"><%= link_to shop_path(shop.id) do %><%= shop.shop_name %></p>
                      <% end %>
                        <% if user_signed_in? && !Favorite.exists?(user_id:current_user.id, shop_id:shop.id) %>
                        <%= link_to "お気に入り登録",shop_favorites_path(shop),method: :post,class: "btn-outline-warning" %>
                        <% else %>
                      <% end %>
                    </div>
                 </div>
              </div>
            <% end %>
          <% else %>
           <div class="not-found">
             <p><i class="fas fa-store-alt"></i>お探しの場所では見つかりませんでした</p>
           </div>
        <% end %>
      </div>
    </div>
  </div>
</div>