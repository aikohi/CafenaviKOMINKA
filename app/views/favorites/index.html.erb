<h2>My Favorite</h2>

<div class="shops">
    <div class="container">
      <div class="row">
          <% @favorites.each do |favorite| %>
            <div class="col-lg-4 md-4"style="margin-bottom:50px;">
               <div class="card">
                <%= attachment_image_tag @shop, :shop_image, size:'100x250',class: "card-img-top",fallback: "no_image.png"%>
                  <div class="card-body">
                    <h5 class="card-title"><%= link_to shop_path(favorite.shop.id) do %><%= favorite.shop.shop_name %></h5>
                    <% end %>
                    <p class="card-text"><%= favorite.shop.introduction %></p>
                    <%= link_to 'お気に入りを解除する', shop_favorites_path(favorite.shop.id), method: :delete, class: "btn btn bg-info" %>
                  </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
