<!---ユーザーの投稿一覧-->
<div class="user-post"style="padding-top:100px;">
  <div class="profile-container text-center"style="padding:50px;">
      <%= attachment_image_tag @user, :profile_image,:fill, 30, 30,fallback: "no_image.png", size:'100x100' %><h3><%= @user.name %></h3>
  </div>
  <div class="shop-index">
    <div class="shops">
      <div class="container">
        <div class="row">
            <% @shops.each do |shop| %>
              <div class="col-lg-4 md-4"style="margin-bottom:50px;">
                 <div class="card">
                  <%= attachment_image_tag shop, :shop_image,:fill, 50, 50,format: 'jpg',size:'100x250',fallback: "no_image.png",class: "card-img-top" %>
                    <div class="card-body">
                      <h5 class="card-title"><%= link_to shop_path(shop.id) do %><%= shop.shop_name %></h5>
                      <% end %>
                      <p class="card-text"><%= shop.introduction %></p>
                    </div>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>