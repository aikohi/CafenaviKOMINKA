<!DOCTYPE html>
<html>
  <head>
    <title>Cafenavikominka</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="u-header">
        <p class="u-header-text">古民家カフェ専門の検索・宣伝サイト　｜　Cafenavi KOMINKA</p>
      </div>
      <div class="main-menu">
        <nav>
          <ul>
            <li><%= link_to "古民家カフェを探す", shops_path %></li>
            <li><%= link_to  user_favorites_path(@user.id) do %><%= current_user.name %>さんのお気に入り</li>
             <% end %>
            <li><%= link_to "古民家カフェを宣伝する", new_shop_path %></li>
          </ul>
        </nav>
      </div>
<!-----ハンバーガーボタン------------->
      <div class="zdo_drawer_menu">
           <div class="zdo_drawer_bg"></div>
            <button type="button" class="zdo_drawer_button">
              <span class="zdo_drawer_bar zdo_drawer_bar1"></span>
              <span class="zdo_drawer_bar zdo_drawer_bar2"></span>
              <span class="zdo_drawer_bar zdo_drawer_bar3"></span>
             <!--<span class="zdo_drawer_menu_text zdo_drawer_text">MENU</span>-->
              <span class="zdo_drawer_close zdo_drawer_text">CLOSE</span>
            </button>
            <nav class="zdo_drawer_nav_wrapper">
              <ul class="zdo_drawer_nav">
               <% if user_signed_in? %>
                <li>
                    <%= link_to "プロフィール変更", edit_user_path(@user.id) %>
                </li>
                <li>
                    <%= link_to '宣伝中のカフェ', user_path(current_user.id) %>
                </li>
                <li>
                    <%= link_to "ログアウト", destroy_user_session_path, class: "glyphicon glyphicon-log-out", method: :delete %>
                </li>
              <% else %>
                <li>
                    <%= link_to "新規会員登録", new_user_registration_path %>
                </li>
                <li>
                    <%= link_to "ログイン",new_user_session_path %>
                </li>
              <% end %>
              </ul>
            </nav>
      </div>
<!---------------->
    </header>
    <%= yield %>
    <footer>
        <p class="footer-text">Cafenavi KOMINKA</p>
      </div>
    </footer>
  </body>
</html>
